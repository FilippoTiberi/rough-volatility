# Cella 1: import base e path
import sys
from pathlib import Path

import numpy as np
import matplotlib.pyplot as plt

# aggiungo ../src al path per importare i moduli del progetto
ROOT = Path("..").resolve()
SRC_PATH = ROOT / "src"
if str(SRC_PATH) not in sys.path:
    sys.path.append(str(SRC_PATH))

from fbm.cholesky_fbm import simulate_fbm_cholesky
from fbm.hurst_estimation import hurst_variance_scaling

plt.rcParams["figure.figsize"] = (10, 4)
plt.rcParams["axes.grid"] = True

# Cella 2: simulazione fBm per H = 0.2

T = 1.0
H = 0.2
n_steps = 512
n_paths = 5

t, paths = simulate_fbm_cholesky(
    n_steps=n_steps,
    hurst=H,
    T=T,
    n_paths=n_paths,
    random_state=42,
)

plt.figure()
for i in range(n_paths):
    plt.plot(t, paths[i], alpha=0.8)
plt.title(f"Fractional Brownian Motion paths (H = {H})")
plt.xlabel("t")
plt.ylabel("B^H_t")
plt.show()

H_hat = hurst_variance_scaling(paths[0])
print(f"True H = {H}, estimated H ≈ {H_hat:.3f}")

# Cella 3: confronto fra H = 0.1 (rough) e H = 0.4 (più liscio)

Hs = [0.1, 0.4]

fig, axs = plt.subplots(1, 2, figsize=(12, 4), sharey=True)

for ax, H in zip(axs, Hs):
    t, paths = simulate_fbm_cholesky(
        n_steps=512, hurst=H, T=1.0, n_paths=5, random_state=0
    )
    for i in range(5):
        ax.plot(t, paths[i], alpha=0.8)
    ax.set_title(f"fBm paths (H = {H})")
    ax.set_xlabel("t")

axs[0].set_ylabel("B^H_t")
plt.suptitle("Effect of Hurst exponent on path roughness", y=1.02)
plt.tight_layout()
plt.show()
